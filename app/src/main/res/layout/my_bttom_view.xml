<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/gray_tab_bg"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/home_linear"
        style="@style/TabBottomLinerStyle">

        <com.one.duanone.view.NoTouchImage
            android:id="@+id/home_image"
            style="@style/TabBottomImageStyle"
            android:background="@drawable/selector_main_bottom_home"/>

        <TextView
            android:id="@+id/home_textView"
            style="@style/TabBottomTextViewStyle"
            android:text="@string/home_page"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_linear"
        style="@style/TabBottomLinerStyle">

        <com.one.duanone.view.NoTouchImage
            android:id="@+id/find_image"
            style="@style/TabBottomImageStyle"
            android:background="@drawable/selector_main_bottom_find"/>

        <TextView
            android:id="@+id/find_textView"
            style="@style/TabBottomTextViewStyle"
            android:text="@string/find_show"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audit_linear"
        style="@style/TabBottomLinerStyle">

        <com.one.duanone.view.NoTouchImage
            android:id="@+id/audit_image"
            style="@style/TabBottomImageStyle"
            android:background="@drawable/selector_main_bottom_audit"/>

        <TextView
            android:id="@+id/audit_textView"
            style="@style/TabBottomTextViewStyle"
            android:text="@string/audit"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_linear"
        style="@style/TabBottomLinerStyle">

        <com.one.duanone.view.NoTouchImage
            android:focusableInTouchMode="false"
            android:id="@+id/message_image"
            style="@style/TabBottomImageStyle"
            android:background="@drawable/selector_main_bottom_message"/>

        <TextView
            android:id="@+id/message_textView"
            style="@style/TabBottomTextViewStyle"
            android:text="@string/message"/>
    </LinearLayout>

</LinearLayout>